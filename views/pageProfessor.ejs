  <script>
  $(document).ready(function() {
  $('#example').DataTable( {
      columnDefs: [
          {
              targets: [ 0, 1, 2 ],
              className: 'mdl-data-table__cell--non-numeric'
          }
      ]
  } );

  $(document).on('click', ".line", (function() {
    console.log($(this).children(".url").text());
    window.location.href = "/downloadFile?url="+$(this).children(".url").text();
  }));

} );
  </script>

  <table id="example" class="mdl-data-table" style="width:100%">
          <thead>
              <tr>
                  <th>Titulo</th>
                  <th>Tema</th>
                  <th>Aluno</th>
                  <th>Email</th>
                  <th>Data</th>
                  <th>Arquivo</th>
              </tr>
          </thead>
          <tbody>
            <% usuarios.forEach((item) => { %>
              <tr class="line">
                  <td><%= item.titulo %></td>
                  <td><%= item.tema %></td>
                  <td><%= item.aluno %></td>
                  <td><%= item.email %></td>
                  <td><%= item.hoje %></td>
                  <td class="url"><%= item.name %></td>
              </tr>
              <% }) %>

          </tbody>
          <tfoot>
              <tr>
                <th>Titulo</th>
                <th>Tema</th>
                <th>Aluno</th>
                <th>Email</th>
                <th>Data</th>
                <th>Arquivo</th>
              </tr>
          </tfoot>
